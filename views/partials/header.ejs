<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="Movie Time - Manage your movie collection with ease"
    />
    <title><%= typeof title !== 'undefined' ? title : 'Movie Time' %></title>
    <link rel="stylesheet" href="/styles/styles.css" />
    <script
      src="https://kit.fontawesome.com/a1de4ca2c2.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <nav>
      <div class="brand">
        <a href="/">
          <i class="fas fa-film"></i>
          <span>Movie Time</span>
        </a>
      </div>

      <ul class="nav-links">
        <li>
          <a href="/add" class="btn-nav btn-nav-primary">
            <i class="fas fa-plus"></i>
            <span>Add Movie</span>
          </a>
        </li>
        <li class="nav-dropdown">
          <a href="#" class="btn-nav btn-nav-contact">
            <i class="fas fa-envelope"></i>
            <span>Contact</span>
          </a>
          <ul class="contact-dropdown">
            <li>
              <a
                href="https://www.linkedin.com/in/dimitris-chios/"
                target="_blank"
                rel="noopener noreferrer"
              >
                <i class="fab fa-linkedin"></i>
                LinkedIn
              </a>
            </li>
            <li>
              <a
                href="https://github.com/ChiosDim"
                target="_blank"
                rel="noopener noreferrer"
              >
                <i class="fab fa-github"></i>
                GitHub
              </a>
            </li>
          </ul>
        </li>
      </ul>
    </nav>
    <main></main>

    <script>
      // Navigation dropdown handling
      const dropdowns = document.querySelectorAll('.nav-dropdown');
      dropdowns.forEach((dropdown) => {
        const link = dropdown.querySelector('a');
        link.addEventListener('click', function (e) {
          e.preventDefault();
          dropdown.classList.toggle('active');
        });
      });

      // Close dropdowns when clicking outside
      document.addEventListener('click', function (e) {
        if (!e.target.closest('.nav-dropdown')) {
          dropdowns.forEach((d) => d.classList.remove('active'));
        }
      });
    </script>
  </body>
</html>
